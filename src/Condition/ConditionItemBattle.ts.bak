import { ConditionItem } from './ConditionItem';
import { BattleBattle } from '@/Battle';

/**
 * 条件项(战斗相关)
 */
export class ConditionItemBattle implements ConditionItem {
    battle: BattleBattle;
    testFunction: (battle: BattleBattle) => boolean;
    constructor(battle: BattleBattle, testFunction: (battle: BattleBattle) => boolean) {
        this.battle = battle;
        this.testFunction = testFunction;
    }

    get isCompleted(): boolean {
        // return true;
        return this.testFunction(this.battle);
    }
}
